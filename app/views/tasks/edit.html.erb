<h1>編集</h1>

<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :status, '状況' %>
          <%= f.text_field :status, class: 'form-control' %>
        </div> 
        <div class="form-group">
          <%= f.label :content, '内容' %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <%= f.submit '更新', class: 'btn btn-primary' %>
      <% end %>